{
  "name": "wooorm",
  "private": true,
  "version": "1.0.0",
  "description": "Website",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/wooorm/wooorm.github.io/issues",
  "homepage": "http://wooorm.com",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "cssnano": "^3.10.0",
    "esmangle": "^1.0.1",
    "fingerprintjs2": "^1.5.1",
    "hast-util-select": "^1.0.0",
    "hastscript": "^3.0.1",
    "postcss-cli": "^5.0.0",
    "prettier": "^1.12.1",
    "rehype-document": "^2.0.0",
    "rehype-preset-minify": "^2.0.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "rehype-slug": "^2.0.1",
    "rehype-stringify": "^3.0.0",
    "remark-cli": "^5.0.0",
    "remark-parse": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "remark-rehype": "^3.0.0",
    "remark-validate-links": "^7.0.0",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.0.0",
    "to-vfile": "^2.1.1",
    "unified": "^6.1.5",
    "vfile-reporter": "^4.0.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build:html": "node build",
    "build:js": "browserify index.js --bare | esmangle > static/index.js",
    "build:css": "postcss index.css > static/index.css",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "prefer-arrow-callback": "off"
    },
    "ignore": [
      "static/index.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
