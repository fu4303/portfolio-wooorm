{
  "name": "wooorm",
  "private": true,
  "version": "1.0.0",
  "description": "Website",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/wooorm/wooorm.github.io/issues",
  "homepage": "https://wooorm.com",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "cssnano": "^4.0.0",
    "fingerprintjs2": "^2.0.0",
    "hast-util-select": "^3.0.0",
    "hastscript": "^5.0.0",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.12.1",
    "rehype-document": "^3.0.0",
    "rehype-preset-minify": "^4.0.0",
    "rehype-prevent-favicon-request": "^2.0.0",
    "rehype-slug": "^2.0.1",
    "rehype-stringify": "^6.0.0",
    "remark-cli": "^7.0.0",
    "remark-parse": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "remark-rehype": "^5.0.0",
    "remark-validate-links": "^9.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "tinyify": "^2.0.0",
    "to-vfile": "^6.0.0",
    "unified": "^8.0.0",
    "vfile-reporter": "^6.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build:html": "node build",
    "build:js": "browserify . -p tinyify -o static/index.js",
    "build:css": "postcss index.css > static/index.css",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-node-append": "off"
    },
    "ignore": [
      "static/index.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
