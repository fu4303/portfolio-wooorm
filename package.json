{
  "name": "wooorm",
  "private": true,
  "version": "4.0.0",
  "description": "Website",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/wooorm/wooorm.github.io/issues",
  "homepage": "https://wooorm.com",
  "devDependencies": {
    "browserify": "^17.0.0",
    "cssnano": "^4.0.0",
    "cssnano-preset-advanced": "^4.0.0",
    "dotenv": "^8.0.0",
    "escape-string-regexp": "^4.0.0",
    "glob": "^7.0.0",
    "hast-util-select": "^4.0.0",
    "hastscript": "^6.0.0",
    "highlight.js": "^10.0.0",
    "humanize-url": "^2.0.0",
    "js-yaml": "^4.0.0",
    "levenshtein-edit-distance": "^2.0.0",
    "node-fetch": "^2.0.0",
    "p-all": "^3.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^8.0.0",
    "postcss-preset-env": "^6.0.0",
    "prettier": "^2.0.0",
    "rehype-document": "^5.0.0",
    "rehype-highlight": "^4.0.0",
    "rehype-meta": "^2.0.0",
    "rehype-preset-minify": "^5.0.0",
    "rehype-prevent-favicon-request": "^2.0.0",
    "rehype-raw": "^5.0.0",
    "rehype-slug": "^4.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-cli": "^9.0.0",
    "remark-frontmatter": "^3.0.0",
    "remark-parse": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "remark-rehype": "^8.0.0",
    "remark-validate-links": "^10.0.0",
    "sharp": "^0.27.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^21.0.0",
    "tinyify": "^3.0.0",
    "to-vfile": "^6.0.0",
    "trough": "^1.0.0",
    "unified": "^9.0.0",
    "unist-builder": "^2.0.0",
    "unist-util-visit": "^2.0.0",
    "vfile-matter": "^2.0.0",
    "vfile-mkdirp": "^2.0.0",
    "vfile-rename": "^1.0.0",
    "vfile-reporter": "^6.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . --write && stylelint \"**/*.css\" --fix && xo --fix",
    "crawl:github-sponsors": "node crawl/github-sponsors",
    "crawl:opencollective": "node crawl/opencollective",
    "crawl:artists": "node crawl/artists",
    "crawl:albums": "node crawl/albums",
    "crawl:shows": "node crawl/shows",
    "crawl": "npm run crawl:github-sponsors && npm run crawl:opencollective && npm run crawl:artists && npm run crawl:albums && npm run crawl:shows",
    "generate:assets": "node generate/assets",
    "generate:theme": "cp node_modules/highlight.js/styles/atom-one-light.css build/syntax.css",
    "generate:structure": "node generate",
    "generate": "npm run generate:assets && npm run generate:theme && npm run generate:structure",
    "build": "npm run crawl && npm run generate",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "ignore": [
            "selectors-within-list"
          ]
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-optional-catch-binding": "off",
      "unicorn/prefer-set-has": "off"
    },
    "ignore": [
      "static/index.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "frontmatter",
      "preset-wooorm",
      [
        "lint-first-heading-level",
        false
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
