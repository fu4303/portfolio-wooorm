{
  "name": "wooorm",
  "private": true,
  "version": "1.0.0",
  "description": "Website",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/wooorm/wooorm.github.io/issues",
  "homepage": "http://wooorm.com",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^14.4.0",
    "cssnano": "^3.10.0",
    "esmangle": "^1.0.1",
    "fingerprintjs2": "^1.5.1",
    "hast-util-select": "^1.0.0",
    "postcss-cli": "^4.1.0",
    "rehype-document": "^2.0.0",
    "rehype-format": "^2.1.0",
    "rehype-preset-minify": "^2.0.0",
    "rehype-stringify": "^3.0.0",
    "remark-cli": "^3.0.1",
    "remark-parse": "^3.0.1",
    "remark-preset-wooorm": "^3.0.0",
    "remark-rehype": "^2.0.1",
    "remark-validate-links": "^6.1.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "to-vfile": "^2.1.1",
    "unified": "^6.1.5",
    "vfile-reporter": "^3.0.0",
    "xo": "^0.18.2"
  },
  "scripts": {
    "build:html": "node build",
    "build:js": "browserify index.js --bare | esmangle > static/index.js",
    "build:css": "postcss index.css > static/index.css",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "lint": "xo && stylelint index.css && remark . -qfo",
    "test": "npm run build && npm run lint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignore": [
      "static/index.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
